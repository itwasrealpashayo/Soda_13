<Window x:Class="Soda_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soda_13"
        mc:Ignorable="d"
        Title="Завод по производству напитков &quot;Soda&quot;" Height="800" Width="1200" MinHeight="800" MinWidth="1200" WindowStartupLocation="CenterScreen" Icon="/Resources/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="#FFE7FABF">
            <Image Source="/Resources/school_logo.png"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0"
                    Height="80" Width="80"/>
            <TextBlock Text="Завод по производству напитков «­Soda»"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        FontSize="30"/>
        </Grid>

        <Frame x:Name="MainFrame" 
                Grid.Row="1"
                NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
